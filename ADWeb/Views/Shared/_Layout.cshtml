<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="@Url.Content("~/content/css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/content/css/custom.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/content/js/jquery-1.10.2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/content/js/bootstrap.min.js")" type="text/javascript"></script>
    @RenderSection("headSection", false)
</head>
<body>

    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle Navigation</span> <span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="~/">ADWeb - Active Directory Web Browser</a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        @if(User.Identity.IsAuthenticated)
                        {
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <span class="glyphicon glyphicon-user"></span> @User.Identity.Name <b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a href="@Url.Action("MySettings","Home")"><span class="glyphicon glyphicon-cog"></span> My Settings</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("LogOff", "Home")"><span class="glyphicon glyphicon-off"></span> Log Off</a>
                                </li>
                            </ul>
                        }
                    </li>
                    <li>
                        @if(!User.Identity.IsAuthenticated)
                        {
                            <a href="@Url.Action("Login", "Home")"><span class="glyphicon glyphicon-user"></span> Login</a>
                        }
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            Quick Links <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            @if(User.Identity.IsAuthenticated)
                            {
                                <li><a href="@Url.Action("Domain", "Home")"><span class="glyphicon glyphicon-home"></span> Domain</a></li>
                                <li><a href="@Url.Action("Index", "Users")"><span class="glyphicon glyphicon-user"></span> Users</a></li>
                                <li><a href="@Url.Action("Index", "Admin")"><span class="glyphicon glyphicon-th-list"></span> Admin</a></li>
                            }
                            
                            <li><a href="@Url.Action("Help", "Home")"><span class="glyphicon glyphicon-question-sign"></span> Help</a></li>
                            <li><a href="@Url.Action("About", "Home")"><span class="glyphicon glyphicon-info-sign"></span> About</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="content">
            @RenderBody()
        </div>
    </div>
    <div id="footer">
        <div class="container">
            <p>
                ADWeb Application
            </p>
        </div>
    </div>
    @Scripts.Render("~/bundles/jqueryval")
</body>
</html>
