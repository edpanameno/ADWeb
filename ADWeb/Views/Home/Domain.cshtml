@model ADWeb.ViewModels.SearchUsersModel

@{
    ViewBag.Title = "ADWeb - Domain Home";
}

<h3>ADWeb Home Page</h3>
<p>Welcome to the home page of the ADWeb application.</p>

<div class="panel panel-primary">
    <div class="panel-heading">Quick Search</div>
    <div class="panel-body">
        <p>Use the fields below to do a quick search of users in the domain.</p>
        @Html.ValidationSummary()
        @using(Html.BeginForm("QuickSearch", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form"}))
        {
            <div class="form-group">
                <label for="SearchValue" class="col-sm-2 control-label">Search Value</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.SearchValue, new { @class="form-control", autofocus="autofocus" })
                </div>
            </div>
            
            <div class="form-group">
                <div class="col-sm-10">
                    <button type="submit" id="btnSearch" class="btn btn-primary">
                        <span class="glyphicon glyphicon-search"></span> Search
                    </button>
                </div>
            </div>
        }
    </div>
</div>

